Classe Forma:
	Metodo area()
	Metodo perimetro()


Classe Ponto():
	Metodo __init__(ponto, x, y):
		ponto.x = x
		ponto.y = y


Classe Linha herda Ponto():
	Metodo __init__(linha, ponto1, ponto2):
		linha.ponto1 = ponto1
		linha.ponto2 = ponto2

	Metodo comprimento(linha):
		return distancia_entre_dois_pontos


Classe Circulo herda Ponto(Ponto):
	Metodo __init__(circulo, raio)	
		circulo.raio = raio

	Metodo area(circulo):
		return pi * raio * raio


Classe Quadrado herda Ponto(x, y):
	Metodo __init__(quadrado, lado):
		quadrado.lado = lado

	Metodo area(quadrado):
		return quadrado.lado * quadrado.lado


Classe Triangulo herda Ponto(x, y):
	Metodo __init__(triangulo, base, altura):
		triangulo.base = base
		triangulo.altura = altura]

	Metodo area():
		return (triangulo.base * triangulo.altura) * 0,5
